<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- 서블릿 정의 -->
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>controller.AccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContentController</servlet-name>
        <servlet-class>controller.ContentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoticeController</servlet-name>
        <servlet-class>controller.NoticeController</servlet-class>
    </servlet>

    <!-- 서블릿 매핑 -->
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/HOMEPAGE/login</url-pattern>
    </servlet-mapping><servlet-mapping>
        <servlet-name>ContentController</servlet-name>
        <url-pattern>/HOMEPAGE/content</url-pattern>
        <url-pattern>/HOMEPAGE/content_view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoticeController</servlet-name>
        <url-pattern>/HOMEPAGE/notice</url-pattern>
        <url-pattern>/HOMEPAGE/notice_view</url-pattern>
    </servlet-mapping>


    <!-- 필터, 리스너 등 추가 설정 (필요시) -->

</web-app>